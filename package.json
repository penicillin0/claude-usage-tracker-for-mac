{
  "name": "claude-usage-tracker-for-mac",
  "version": "0.0.7",
  "description": "Claude Codeの使用料金を可視化する Mac用のメニューバーアプリケーション",
  "type": "module",
  "main": "dist/main.js",
  "scripts": {
    "build": "tsc",
    "start": "electron .",
    "dev": "tsc && electron .",
    "lint": "biome lint .",
    "lint:fix": "biome lint --write .",
    "format": "biome format --write .",
    "check": "biome check .",
    "check:fix": "biome check --write .",
    "typecheck": "tsc --noEmit",
    "test": "echo \"Error: no test specified\" && exit 1",
    "dist": "npm run build && electron-builder",
    "dist:mac": "npm run build && electron-builder --mac",
    "dist:mac:universal": "npm run build && electron-builder --mac --universal"
  },
  "keywords": ["claude", "menubar", "electron", "macos"],
  "author": "penicillin0",
  "license": "MIT",
  "devDependencies": {
    "@biomejs/biome": "1.9.4",
    "@types/node": "24.0.1",
    "electron": "36.4.0",
    "electron-builder": "26.0.12",
    "typescript": "5.8.3"
  },
  "dependencies": {
    "canvas": "3.1.0",
    "ccusage": "0.5.0"
  },
  "build": {
    "appId": "com.penicillin0.claude-usage-tracker",
    "productName": "Claude Usage Tracker",
    "directories": {
      "output": "release"
    },
    "files": ["dist/**/*", "assets/**/*", "node_modules/**/*", "package.json"],
    "mac": {
      "category": "public.app-category.productivity",
      "icon": "build/icons/icon.png",
      "hardenedRuntime": true,
      "gatekeeperAssess": false,
      "identity": "Ayahito Nakamura (52BYYDA79X)",
      "notarize": true,
      "extendInfo": {
        "LSUIElement": true
      },
      "target": [
        {
          "target": "dmg",
          "arch": ["x64", "arm64"]
        },
        {
          "target": "zip",
          "arch": ["x64", "arm64"]
        }
      ]
    },
    "dmg": {
      "contents": [
        {
          "x": 410,
          "y": 150,
          "type": "link",
          "path": "/Applications"
        },
        {
          "x": 130,
          "y": 150,
          "type": "file"
        }
      ]
    }
  }
}
